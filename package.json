{
	"name": "verifpal",
	"displayName": "Verifpal",
	"version": "1.0.9",
	"publisher": "symbolicsoft",
	"description": "Verifpal language support.",
	"author": {
		"name": "Nadim Kobeissi",
		"email": "nadim@symbolic.software"
	},
	"license": "GPL-3.0",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Programming Languages"
	],
	"icon": "res/icon.png",
	"repository": {
		"type": "git",
		"url": "https://source.symbolic.software/verifpal/verifpal.git"
	},
	"activationEvents": [
		"onLanguage:verifpal"
	],
	"main": "./out/src/extension",
	"contributes": {
		"languages": [
			{
				"id": "verifpal",
				"aliases": [
					"Verifpal",
					"verifpal"
				],
				"extensions": [
					".vp"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "verifpal",
				"scopeName": "source.verifpal",
				"path": "./syntax/verifpal.tmLanguage"
			}
		],
		"commands": [
			{
				"command": "verifpal.path",
				"title": "Verifpal: Show Path to Verifpal"
			},
			{
				"command": "verifpal.verify",
				"title": "Verifpal: Run Attacker Analysis"
			},
			{
				"command": "verifpal.showDiagram",
				"title": "Verifpal: Show Protocol Diagram"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Verifpal Configuration",
			"properties": {
				"verifpal.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable or disable Verifpal integration"
				},
				"verifpal.path": {
					"type": "string",
					"default": "",
					"description": "Path to Verifpal binary"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "latest",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "latest",
		"@typescript-eslint/parser": "latest",
		"eslint": "latest",
		"typescript": "latest"
	},
	"dependencies": {
		"cross-spawn": "latest"
	}
}
